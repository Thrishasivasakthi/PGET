@model IEnumerable<DAL.Models.Booking>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-ticket-perforated"></i> All Bookings
        </h2>
        <div>
            <a href="/Admin/ExportBookingsCsv" class="btn btn-success">
                <i class="bi bi-file-earmark-excel"></i> Export to CSV
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Bus</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th class="text-end">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model)
                        {
                            <tr>
                                <td>@b.Id</td>
                                <td>@b.User?.FullName</td>
                                <td>
                                    <span class="fw-bold">@b.Bus?.BusName</span>
                                    <small class="text-muted d-block">@b.Bus?.BusNumber</small>
                                </td>
                                <td>@b.BookingDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <span class="badge @(b.Status == "Cancelled" ? "bg-danger" : "bg-success")">
                                        @b.Status
                                    </span>
                                </td>
                                <td class="text-end fw-bold">@b.TotalAmount.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.02);
        }
        .table th {
            white-space: nowrap;
            position: relative;
        }
        .table td {
            vertical-align: middle;
        }
    </style>
}