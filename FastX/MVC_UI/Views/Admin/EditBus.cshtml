@model DAL.Models.Bus

<h2>Edit Bus</h2>

<form asp-action="EditBus" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label>Bus Name</label>
        <input asp-for="BusName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Bus Number</label>
        <input asp-for="BusNumber" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Bus Type</label>
        <input asp-for="BusType" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Total Seats</label>
        <input asp-for="TotalSeats" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Route</label>
        @* This is where the null exception was coming from *@
        @Html.DropDownListFor(model => model.RouteId, ViewBag.RouteList as SelectList, "Select Route", new { @class = "form-control" })
    </div>

    <button class="btn btn-success">Update</button>
</form>
