@model DAL.Models.Bus
<h2>Add Bus</h2>
<form asp-action="AddBus" method="post">
    <div class="form-group">
        <label>Bus Name</label>
        <input asp-for="BusName" class="form-control" required />
        <span asp-validation-for="BusName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Bus Number</label>
        <input asp-for="BusNumber" class="form-control" required />
        <span asp-validation-for="BusNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Bus Type</label>
        <input asp-for="BusType" class="form-control" required />
        <span asp-validation-for="BusType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Total Seats</label>
        <input asp-for="TotalSeats" class="form-control" required />
        <span asp-validation-for="TotalSeats" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Route Id</label>
        <input asp-for="RouteId" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Operator Id</label>
        <input asp-for="BusOperatorId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>